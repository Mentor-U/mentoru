<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MentorU.Views.SettingsPage"
             Title="Settings"
             xmlns:local="clr-namespace:MentorU.ViewModels"
             BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">
    
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label Text="   Display email publically on profile." FontSize="17" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
            <Switch IsToggled="{Binding emailSwitch}" OnColor="Red"
                VerticalOptions="Center"
                Grid.Column="1"
                Grid.Row="0"/>
            <Label Text="   Display phone number publically on profile." FontSize="17" FontAttributes="Bold" Grid.Row="1" Grid.Column="0" VerticalOptions="Center"/>
            <Switch IsToggled="{Binding phoneSwitch}" OnColor="Red"
                VerticalOptions="Center"
                Grid.Column="1"
                Grid.Row="1"/>

            <Button Grid.Row="3" Grid.ColumnSpan="2" Text="Save" Command="{Binding SaveSettingsCommand}"
                    BackgroundColor="Green"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>